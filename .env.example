# InvoicePe Environment Configuration
# Copy this file to .env and replace with real values
# DO NOT commit .env file to version control

# App Configuration
APP_NAME=InvoicePe
APP_VERSION=1.0.0
ENVIRONMENT=UAT

# Supabase Configuration
# Get these values from your Supabase project dashboard
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# PhonePe Configuration
# Get these from PhonePe merchant dashboard
PHONEPE_MERCHANT_ID=YOUR_MERCHANT_ID
PHONEPE_SALT_KEY=your-salt-key-here
PHONEPE_SALT_INDEX=1
PHONEPE_ENVIRONMENT=UAT

# Twilio Verify Configuration (for OTP)
# Get these from Twilio console
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_MESSAGE_SERVICE_SID=your-message-service-sid

# Database Configuration
DATABASE_PASSWORD=your-database-password

# API Endpoints
PROCESS_PAYMENT_FUNCTION=process-payment
GENERATE_INVOICE_PDF_FUNCTION=generate-invoice-pdf
EXPORT_LEDGER_FUNCTION=export-ledger
INITIATE_PAYMENT_FUNCTION=initiate-payment

# Security Configuration
# Generate strong random keys for production
ENCRYPTION_KEY=your-encryption-key-here
JWT_SECRET=your-jwt-secret-here

# Development Configuration
DEBUG_MODE=true
LOG_LEVEL=info
ENABLE_ANALYTICS=false

# Optional: Future Configuration
OPENAI_API_KEY=
SENDGRID_API_KEY=
S3_HOST=
S3_REGION=
S3_ACCESS_KEY=
S3_SECRET_KEY=
